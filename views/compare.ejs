    <script src="https://kit.fontawesome.com/15a51a8672.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="compare.css">
    <link rel="icon" href="Image/favicon.ico">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
</head>

<body>

    <!-- NAVBAR -->
    <div class="header">
        <div class="container-fluid">

            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="#"> <img src="image/corona.gif" alt="" class="logo"><%= title %></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse dropDownCentre" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link contact" href="/">Home</a>
                            <!-- target="_blank" is for opening the link in a new tab -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link contact" href="https://gmail.com" target="_blank">Contact Me</a>
                            <!-- target="_blank" is for opening the link in a new tab -->
                        </li>
                    </ul>
                </div>
            </nav>
            <p class="intro">ᴛʜɪꜱ ᴡᴇʙꜱɪᴛᴇ ᴡɪʟʟ ᴄᴏᴍᴘᴀʀᴇ ʀᴇᴀʟ ᴛɪᴍᴇ ᴄᴏᴠɪᴅ ʀᴇᴘᴏʀᴛs ᴏꜰ 2 ᴄᴏᴜɴᴛʀɪᴇꜱ.</p>
        </div>
    </div>


    <div class="middle">
        <form class="compareForm" action="/compare" method="post">
            <input class="ipBox1" type="text" placeholder="Search Country1" name="newDesh1" autocomplete="off"> <input class="ipBox2" type="text" placeholder="Search Country2" name="newDesh2" autocomplete="off">
            
            <button class="compareBTN" type="submit"> <i class="fas fa-search"></i> </button>
        </form>

        <div class="row first-row">

            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="col1 f-row-f-col">
                    <h3 style="padding-bottom: 4%;" class="desh"><%= desh1 %>, <%= Continent1 %> </h3>
                    <img class="anime" src="<%=FlagIcon1%>" alt="">
                    <h3 style="padding-top: 4%;">Population: <%= Population1 %></h3>
                    <h2>Information:</h2>
                    <hr class="info-hr">
                    <p class="info">Total Cases: <%= TotalCase1 %></p>
                    <p class="info">Total Deaths: <%= TotalDeath1 %></p>
                    <p class="info">Total Recovered: <%= TotalRecovered1 %> </p>
                    <p class="info">Death Percentage: <%= DeathPercent1 %> %</p>
                    <p class="info">Recovery Percentage: <%= RecoveryPercent1 %> %</p>
                    <p class="info">Total active cases: <%= TotalActiveCase1 %> </p>
                    <p class="info">Total critical case: <%= TotalCriticalCase1 %> </p>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="col2 f-row-s-col">
                    <h3 style="padding-bottom: 4%;" class="desh"><%= desh2 %>, <%= Continent2 %> </h3>
                    <img class="anime" src="<%=FlagIcon2%>" alt="">
                    <h3 style="padding-top: 4%;">Population: <%= Population2 %></h3>
                    <h2>Information:</h2>
                    <hr class="info-hr">
                    <p class="info">Total Cases: <%= TotalCase2 %></p>
                    <p class="info">Total Deaths: <%= TotalDeath2 %></p>
                    <p class="info">Total Recovered: <%= TotalRecovered2 %> </p>
                    <p class="info">Death Percentage: <%= DeathPercent2 %> %</p>
                    <p class="info">Recovery Percentage: <%= RecoveryPercent2 %> %</p>
                    <p class="info">Total active cases: <%= TotalActiveCase2 %> </p>
                    <p class="info">Total critical case: <%= TotalCriticalCase2 %> </p>
                </div>
            </div>

        </div>

    </div>

    <!-- SOCIAL MEDIA, COPYRIGHT, CREDIT -->

    <div class="footer">
        <a href="https://facebook.com" target="_blank"> <img class="fb" src="image/facebook.png" alt=""></a>
        <a href="https://instagram.com" target="_blank"><img class="insta" src="image/instagram.png" alt=""></a>
        <a href="https://github.com/noob-nilarghya" target="_blank"> <img class="git" src="image/github.png" alt=""></a>
        <a href="https://linkedin.com" target="_blank"><img class="in" src="image/linkedin.png" alt=""></a>
        <p class="copyright"> © 2020-24 covid19Tracker.org | All right reserved.</p>
    </div>


</body>

</html>